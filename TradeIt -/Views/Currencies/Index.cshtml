@{
}

@model IEnumerable<Currency>


<a class="btn btn-primary mb-4" asp-area="" asp-controller="Currencies" asp-action="Create">Create</a>


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Currency ID
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyId)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Currencies" asp-route-id="@item.CurrencyId">Details</a> |
                <a asp-action="Delete" asp-controller="Currencies"  asp-route-id="@item.CurrencyId">Delete</a>
            </td>
        </tr>
    }
</table>