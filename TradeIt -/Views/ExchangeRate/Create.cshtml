@model TradeIt__.ViewModels.Holder

<form class="col-md-3 mt-4" asp-controller="ExchangeRate" asp-action="AddExchangeRate" asp-route-currencyId="@Model.id"method="post">
    <div class="form-group">
        <label for="receiverUsername">Exchange rate</label>
        <input class="form-control" type="number" step="0.001" name="rate"/>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" required />
        <label class="form-check-label" for="exampleCheck1">
            Are you sure?
        </label>
    </div>
    <button type="submit" class="btn btn-danger mt-2">Add</button>
</form>