@{
    ViewData["Title"] = "Home Page";
}



@if (SignInManager.IsSignedIn(User))
{

<div class="row mb-lg-5 mb-md-3 mb-1">
    <div class="col-lg-3 mb-md-3 mb-1">
    </div>
    <div class="col-lg-6 mb-md-3 mb-1">
        <div class="card">
            <img class="card-img-top" src="">
            <div class="card-body">
                <h4 class="card-title">Trade</h4>
                <p class="card-text">Here you can trade the various currencies.</p>
                <a class="btn btn-outline-primary" asp-controller="Functions" asp-action="Trade">Go</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-md-3 mb-1">
        <div class="card">
            <img class="card-img-top" src="">
            <div class="card-body">
                <h4 class="card-title">Transfer</h4>
                <p class="card-text">Here you can transfer funds / currencies to various users.</p>
                <a class="btn btn-outline-primary" asp-controller="Functions" asp-action="Transfer">Go</a>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <img src="" alt="" class="card-img-top">
            <div class="card-body">
                <h4 class="card-title">History</h4>
                <p class="card-text">
                    Here you can see what mistakes you did or not!
                </p>
                <a class="btn btn-outline-primary" asp-controller="History" asp-action="Index">Go</a>
            </div>
        </div>
    </div>
</div>



}
else
{
    <div class="row">
        <div class="col-xl-4">
            <div class="card p-3">
                <div class="card-body">
                    <h4 class="card-title">Trade It!</h4>
                    <p class="card-text">Explore the exciting new dimension.</p>
                    <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Get Started</a>
                </div>
            </div>
        </div>
    </div>
}
